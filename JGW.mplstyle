# Minor edits to J. Garrett's style from the SciencePlots package:

figure.figsize : 8, 6

# Set x axis
xtick.major.size : 6
xtick.major.width : 1
xtick.minor.size : 3
xtick.minor.width : 1

# Set y axis
ytick.major.size : 6
ytick.major.width : 1
ytick.minor.size : 3
ytick.minor.width : 1

# Fontsizes
xtick.labelsize : 14
ytick.labelsize : 14
legend.fontsize : 16
legend.title_fontsize : 16
axes.titlesize : 22
axes.labelsize : 16

# Set line widths
axes.linewidth : 1
grid.linewidth : .3
lines.linewidth : 2.

# Use sans-serif fonts
font.family: sans-serif
font.sans-serif: Arial

savefig.bbox : tight
savefig.pad_inches : 0.01

